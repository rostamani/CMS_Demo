@using MyCMS.ViewModels.Users
@model EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش کاربر @Model.Username</h1>
<hr />
<form class="form-horizontal" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Username"></label>
        <div class="col-md-10">
            <input asp-for="Username" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    @*style="display:inline-block"  77*@
    <div class="form-group">
        <label class="col-md-2 control-label">دسترسی ها</label>
        <div class="col-md-10">
            @for (int i = 0; i < Model.Roles.Count(); i++)
            {
                <div style="display:inline-block" class="form-group row">
                    <label class="col-md-2 control-label">
                        <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" /> @Model.Roles[i].Name
                        <input type="hidden" asp-for="@Model.Roles[i].Name" />
                    </label>
                </div>
            }
            @*@foreach (var role in Model.Roles)
                {
                    <div style="display:inline-block" class="form-group row">
                        <label class="col-md-2 control-label">
                            <input type="checkbox" name="IsSelected" /> @role.Name
                            <input name="Name" type="hidden" />
                        </label>
                    </div>
                }*@
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-success">ویرایش</button>
            <a href="/admin/users" class="btn btn-primary">بازگشت</a>
        </div>
    </div>
</form>
