@model List<MyCMS.DomainClasses.Page.Page>
@{
    ViewData["Title"] = ViewBag.Title;
}

    <section class="last-news-section border-radius margin-top-60">
        <header><i class="icons icon-doc-2"></i>  <h3>آخرین اخبار ارسالی @ViewBag.Title</h3> </header>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <img class="border-radius" src="/Images/@item.ImageName">
                    <h2> <a href="/news/@item.PageId"> @item.PageTitle </a></h2>
                    <p>@item.ShortDescription</p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreatedDate.ConvertToPersianDate() </span>
                    @*<a href="" class="more-link"><i class="icons icon-more"></i></a>*@
                </li>
            }
        </ul>
    </section>

